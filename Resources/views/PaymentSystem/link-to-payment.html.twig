{% autoescape false %}
<form action="{{ url('kitano_payment_fake_payment') }}" method="post">
    <input type="hidden" name="date" value="{{ date }}"/>
    <input type="hidden" name="amount" value="{{ amount }}"/>
    <input type="hidden" name="orderId" value="{{ orderId }}"/>
    <input type="hidden" name="transactionId" value="{{ transactionId }}"/>
    <input type="hidden" name="notification_url" value="{{ notificationUrl }}"/>
    <input type="hidden" name="internal_back_to_shop" value="{{ internalBackToShop }}"/>
    <input type="hidden" name="external_back_to_shop" value="{{ externalBackToShop }}"/>
    <input type="hidden" name="mode" value="accept"/>

    <input type="submit" value="{{ submitLabel|default('Accept Payment') }}"/>
</form>

